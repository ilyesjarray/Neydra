pragma solidity ^0.8.0;interface IERC20{function transferFrom(address sender,address recipient,uint256 amount)external returns(bool);function balanceOf(address account)external view returns(uint256);}contract NeydraPaymentProcessor{address public owner;IERC20 public usdtToken;mapping(address=>bool) public processedTx;event PaymentReceived(address indexed payer,uint256 amount,bytes32 indexed plan);constructor(){owner=msg.sender;usdtToken=IERC20(0xdAC17F958D2ee523a2206206994597C13D831ec7);}function payStandard()external{require(usdtToken.transferFrom(msg.sender,address(this),15*10**6),"Transfer failed");emit PaymentReceived(msg.sender,15*10**6,keccak256("standard"));}function payPremium()external{require(usdtToken.transferFrom(msg.sender,address(this),40*10**6),"Transfer failed");emit PaymentReceived(msg.sender,40*10**6,keccak256("premium"));}function payUltra()external{require(usdtToken.transferFrom(msg.sender,address(this),90*10**6),"Transfer failed");emit PaymentReceived(msg.sender,90*10**6,keccak256("ultra"));}function withdraw()external{require(msg.sender==owner,"Not owner");usdtToken.transfer(owner,usdtToken.balanceOf(address(this)));}}
